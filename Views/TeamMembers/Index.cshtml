@model IEnumerable<TeamMember>
@{
    ViewData["Title"] = "Team Members";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-users text-primary"></i> Team Members
        </h1>
        <p class="text-muted">Manage your team</p>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Add Member
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var member in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" 
                                 style="width: 60px; height: 60px; font-size: 24px;">
                                @member.Name.Substring(0, 1).ToUpper()
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@member.Name</h5>
                                <span class="badge bg-primary">@member.Role</span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-envelope me-1"></i>@member.Email
                            </small>
                            <br />
                            <small class="text-muted">
                                <i class="fas fa-project-diagram me-1"></i>@member.Project?.Name
                            </small>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@member.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No Team Members Yet</h3>
            <p class="text-muted">Add team members to your projects</p>
            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-plus me-2"></i>Add First Member
            </a>
        </div>
    </div>
}
