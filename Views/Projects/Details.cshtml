@model global::Project.Models.Project
@{
    ViewData["Title"] = "Project Details";
}

<div class="row mb-4">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Projects</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row g-4">
    <!-- Project Info -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-project-diagram me-2"></i>@Model.Name
                </h4>
                <span class="badge 
                    @(Model.Status == ProjectStatus.InProgress ? "bg-success" : 
                      Model.Status == ProjectStatus.Planning ? "bg-info" : 
                      Model.Status == ProjectStatus.Completed ? "bg-light text-dark" : 
                      Model.Status == ProjectStatus.OnHold ? "bg-warning" : "bg-secondary")">
                    @Model.Status
                </span>
            </div>
            <div class="card-body">
                <h5 class="mb-3">Description</h5>
                <p class="text-muted">@(Model.Description ?? "No description provided")</p>
                
                <hr />
                
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="fas fa-calendar text-primary me-2"></i>Start Date:</strong><br />
                            <span class="ms-4">@Model.StartDate.ToString("MMMM dd, yyyy")</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="fas fa-calendar-check text-success me-2"></i>End Date:</strong><br />
                            <span class="ms-4">@(Model.EndDate?.ToString("MMMM dd, yyyy") ?? "Not set")</span>
                        </p>
                    </div>
                </div>
                
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Project
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Tasks Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-tasks text-primary me-2"></i>Tasks (@Model.Tasks.Count)
                </h5>
                <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus me-1"></i>Add Task
                </a>
            </div>
            <div class="card-body">
                @if (Model.Tasks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var task in Model.Tasks.OrderBy(t => t.Status).ThenBy(t => t.DueDate))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            @if (task.Status == TaskStatus.Completed)
                                            {
                                                <i class="fas fa-check-circle text-success"></i>
                                            }
                                            else if (task.Status == TaskStatus.InProgress)
                                            {
                                                <i class="fas fa-spinner text-info"></i>
                                            }
                                            else if (task.Status == TaskStatus.Blocked)
                                            {
                                                <i class="fas fa-ban text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-circle text-muted"></i>
                                            }
                                            <h6 class="mb-0">@task.Title</h6>
                                        </div>
                                        @if (!string.IsNullOrEmpty(task.Description))
                                        {
                                            <p class="text-muted small mb-2">@task.Description</p>
                                        }
                                        <div class="d-flex gap-3">
                                            @if (task.DueDate.HasValue)
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>@task.DueDate.Value.ToString("MMM dd, yyyy")
                                                </small>
                                            }
                                            @if (!string.IsNullOrEmpty(task.AssignedTo))
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>@task.AssignedTo
                                                </small>
                                            }
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge 
                                            @(task.Priority == TaskPriority.Critical ? "bg-danger" : 
                                              task.Priority == TaskPriority.High ? "bg-warning" : 
                                              task.Priority == TaskPriority.Medium ? "bg-info" : "bg-secondary") mb-2">
                                            @task.Priority
                                        </span>
                                        <br />
                                        <span class="badge 
                                            @(task.Status == TaskStatus.Completed ? "bg-success" : 
                                              task.Status == TaskStatus.InProgress ? "bg-info" : 
                                              task.Status == TaskStatus.Blocked ? "bg-danger" : 
                                              task.Status == TaskStatus.Review ? "bg-warning" : "bg-secondary")">
                                            @task.Status
                                        </span>
                                        <br />
                                        <div class="mt-2">
                                            <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No tasks yet. Add your first task to get started!</p>
                        <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add Task
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Progress Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie text-primary me-2"></i>Progress
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Tasks.Any())
                {
                    var completionPercentage = (Model.Tasks.Count(t => t.Status == TaskStatus.Completed) * 100.0) / Model.Tasks.Count;
                    <div class="text-center mb-3">
                        <h2 class="display-4 text-primary">@completionPercentage.ToString("F0")%</h2>
                        <p class="text-muted">Complete</p>
                    </div>
                    <div class="progress mb-3" style="height: 20px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @completionPercentage%">
                            @Model.Tasks.Count(t => t.Status == TaskStatus.Completed) / @Model.Tasks.Count
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-secondary me-1"></i>To Do</span>
                        <strong>@Model.Tasks.Count(t => t.Status == TaskStatus.Todo)</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-info me-1"></i>In Progress</span>
                        <strong>@Model.Tasks.Count(t => t.Status == TaskStatus.InProgress)</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-warning me-1"></i>Review</span>
                        <strong>@Model.Tasks.Count(t => t.Status == TaskStatus.Review)</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="fas fa-circle text-success me-1"></i>Completed</span>
                        <strong>@Model.Tasks.Count(t => t.Status == TaskStatus.Completed)</strong>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No tasks to track</p>
                }
            </div>
        </div>
        
        <!-- Team Members Card -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users text-primary me-2"></i>Team (@Model.TeamMembers.Count)
                </h5>
                <a asp-controller="TeamMembers" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                @if (Model.TeamMembers.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var member in Model.TeamMembers)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">@member.Name</h6>
                                        <small class="text-muted">@member.Email</small>
                                    </div>
                                    <span class="badge bg-primary">@member.Role</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No team members yet</p>
                    <a asp-controller="TeamMembers" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-sm btn-primary w-100">
                        <i class="fas fa-plus me-1"></i>Add Member
                    </a>
                }
            </div>
        </div>
    </div>
</div>
