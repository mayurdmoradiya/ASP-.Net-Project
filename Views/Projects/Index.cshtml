@model IEnumerable<global::Project.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-project-diagram text-primary"></i> Projects
        </h1>
        <p class="text-muted">Manage all your projects</p>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>New Project
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">@project.Name</h5>
                            <span class="badge 
                                @(project.Status == ProjectStatus.InProgress ? "bg-success" : 
                                  project.Status == ProjectStatus.Planning ? "bg-info" : 
                                  project.Status == ProjectStatus.Completed ? "bg-primary" : 
                                  project.Status == ProjectStatus.OnHold ? "bg-warning" : "bg-secondary")">
                                @project.Status
                            </span>
                        </div>
                        
                        <p class="card-text text-muted">
                            @(project.Description?.Length > 120 ? project.Description.Substring(0, 120) + "..." : project.Description)
                        </p>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                Start: @project.StartDate.ToString("MMM dd, yyyy")
                            </small>
                            @if (project.EndDate.HasValue)
                            {
                                <br />
                                <small class="text-muted">
                                    <i class="fas fa-calendar-check me-1"></i>
                                    End: @project.EndDate.Value.ToString("MMM dd, yyyy")
                                </small>
                            }
                        </div>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="text-center p-2 bg-light rounded">
                                    <div class="fw-bold text-primary">@project.Tasks.Count</div>
                                    <small class="text-muted">Tasks</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-2 bg-light rounded">
                                    <div class="fw-bold text-success">@project.Tasks.Count(t => t.Status == TaskStatus.Completed)</div>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                        
                        @if (project.Tasks.Any())
                        {
                            var completionPercentage = (project.Tasks.Count(t => t.Status == TaskStatus.Completed) * 100.0) / project.Tasks.Count;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small class="text-muted">Progress</small>
                                    <small class="text-muted">@completionPercentage.ToString("F0")%</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @completionPercentage%"></div>
                                </div>
                            </div>
                        }
                        
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-eye me-1"></i>View
                            </a>
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No Projects Yet</h3>
            <p class="text-muted">Create your first project to get started with task management</p>
            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-plus me-2"></i>Create Your First Project
            </a>
        </div>
    </div>
}
